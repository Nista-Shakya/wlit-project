<%- include admin_navbar.ejs %>
<div class="row">
  <h1 style="font-family: Michella Garden; text-align: center; font-size: 48px">
    My arts
  </h1>
  <% myarts.forEach((arts, index) => { %>
  <div class="column">
    <a href="/describe_admin/<%= arts._id %>">
      <div class="card">
        <div class="card-body">
          <img src="/images/<%= arts.image %>" width="300px" height="250px" />
          <h4><b><%= arts.title %></b></h4>
          <h1><%= arts.price %></h1>
        </div>
      </div>
    </a>
  </div>
  <% } )%>
</div>
