<%- include admin_navbar.ejs %>
<div class="row">
  <% categories.forEach((category, index) => { %>
  <h1 style="font-family: Michella Garden; text-align: center; font-size: 48px">
    <%= index=== 0 ? category.categories : '' %>
  </h1>
  <div class="column">
    <a href="/describe_admin/<%= category._id %>">
      <div class="card">
        <div class="card-body">
          <img
            src="/images/<%= category.image %>"
            width="300px"
            height="250px"
          />
          <h4><b><%= category.title %></b></h4>
          <h1><%= category.price %></h1>
        </div>
      </div>
    </a>
  </div>
  <% } )%>
</div>
